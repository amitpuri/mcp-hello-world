# MCP Hello World Server Configuration (Python)

# Server Identity
MCP_SERVER_NAME=hello-world-server
MCP_SERVER_VERSION=1.0.0
MCP_LOG_LEVEL=info

# Model Configuration
DEFAULT_MODEL=claude
ENABLE_MODEL_ROUTING=true

# Model API Keys (if integrating with actual models)
# CLAUDE_API_KEY=your-claude-api-key-here
# OPENAI_API_KEY=your-openai-api-key-here
# LLAMA_API_KEY=your-llama-api-key-here

# Model Endpoints (optional custom endpoints)
CLAUDE_ENDPOINT=https://api.anthropic.com/v1
OPENAI_ENDPOINT=https://api.openai.com/v1
LLAMA_ENDPOINT=http://localhost:11434/v1

# Greeting Customization
MAX_NAME_LENGTH=50
ENABLE_EMOJI=true
DEFAULT_GREETING_STYLE=simple

# Client Settings
CLIENT_TIMEOUT=30
MAX_RETRIES=3

# Development
PYTHON_ENV=development
# DEBUG=true